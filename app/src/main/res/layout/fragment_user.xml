<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/trangChu_navbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/trangChu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Cá nhân"
                android:textSize="26sp"
                android:textColor="@color/textTitleColor"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/avt"
                    android:scaleType="centerCrop"
                    android:contentDescription="todo"
                    tools:ignore="HardcodedText" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/tvNameOfUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp">
                </TextView>

                <TextView
                    android:id="@+id/TvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BASIC"
                    android:background="@drawable/border_radius_picture"
                    android:textSize="12sp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:letterSpacing="0.07">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPremiumOfUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nâng cấp tài khoản"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_chevron_right_24"
                android:gravity="center"
                android:layout_marginLeft="150dp">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/infoAccount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="Thông tin tài khoản"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/managerAccount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Quản lý cá nhân"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Đăng xuất tài khoản"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>